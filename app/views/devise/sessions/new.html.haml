%h2 Log in

= form_for(resource, as: resource_name, url: session_path(resource_name), html: { id: "login_page" }) do |f|
  %div
    = f.label :email
    %br
    = f.email_field :email, autofocus: true, id: "email_login_page"

  %div
    = f.label :password
    %br
    = f.password_field :password, autocomplete: "off", id: "password_login_page"

  - if devise_mapping.rememberable?
    %div
      = f.check_box :remember_me
      = f.label :remember_me

  %div
    = f.submit "Log in"

= render "devise/shared/links"
