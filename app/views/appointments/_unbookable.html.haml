#modal-window.modal.fade
  .modal-dialog
    .modal-content
      .modal-header
        %button{ :type => "button", class: "close", "data-dismiss" => "modal" }
          %span{ "aria-hidden" => true }
            &times;
          %span{ class: "sr-only" }
            Close
        %h4{ class: "modal-title" }
          = "#{@appointment.description}"
      .modal-body
        - @errors.each do |error|
          .alert.alert-danger
            = error
      .modal-footer